<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net48;net8.0-windows</TargetFrameworks>
    <Platforms>x64</Platforms>
    <AssemblyName>UpdateDimLabels</AssemblyName>
    <RootNamespace>UpdateDimLabels</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <!-- Framework build links against AutoCAD 2024 DLLs -->

  <!-- Core build links against AutoCAD 2025 DLLs -->
  <ItemGroup Condition="'$(TargetFramework)'=='net8.0-windows'">
    <Reference Include="acdbmgd" HintPath="C:\Program Files\Autodesk\AutoCAD 2025\acdbmgd.dll" Private="false" />
    <Reference Include="acmgd" HintPath="C:\Program Files\Autodesk\AutoCAD 2025\acmgd.dll" Private="false" />
    <Reference Include="accoremgd" HintPath="C:\Program Files\Autodesk\AutoCAD 2025\accoremgd.dll" Private="false" />
    <Reference Include="ManagedMapApi" HintPath="C:\Program Files\Autodesk\AutoCAD 2025\Map\ManagedMapApi.dll" Private="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EPPlus" Version="8.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="accoremgd">
      <HintPath>..\..\..\..\..\Program Files\Autodesk\AutoCAD 2022\accoremgd.dll</HintPath>
    </Reference>
    <Reference Include="Acdbmgd">
      <HintPath>..\..\..\..\..\Program Files\Autodesk\AutoCAD 2022\acdbmgd.dll</HintPath>
    </Reference>
    <Reference Include="Acmgd">
      <HintPath>..\..\..\..\..\Program Files\Autodesk\AutoCAD 2022\acmgd.dll</HintPath>
    </Reference>
    <Reference Include="ManagedMapApi">
      <HintPath>..\..\..\..\..\Program Files\Autodesk\AutoCAD 2022\Map\ManagedMapApi.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="CopyToBundle" AfterTargets="Build">
    <PropertyGroup>
      <BundleDir>$(MSBuildProjectDirectory)\UpdateDimLabels.bundle</BundleDir>
      <BundleSubDir Condition="'$(TargetFramework)'=='net48'">2014-2024</BundleSubDir>
      <BundleSubDir Condition="'$(TargetFramework)'=='net8.0-windows'">2025+</BundleSubDir>
    </PropertyGroup>
    <ItemGroup>
      <_SourceFiles Include="$(TargetDir)UpdateDimLabels.dll" />
      <_SourceFiles Include="$(TargetDir)EPPlus.dll" />
    </ItemGroup>
    <MakeDir Directories="$(BundleDir)\$(BundleSubDir)" />
    <Copy SourceFiles="@(_SourceFiles)" DestinationFolder="$(BundleDir)\$(BundleSubDir)" />
  </Target>
</Project>
